{
  "manifest_version": 3,
  "name": "ChatGPT Chat Pinner",
  "version": "0.1.0",
  "description": "Pin your favorite ChatGPT chats and keep them at the top for easy access.",
  "author": "Robera Abera",
  "homepage_url": "https://github.com/roba-6734/chatgpt-chat-pinner",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Chat Pinner"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"]
    }
  ]
}